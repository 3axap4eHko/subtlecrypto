    "sha512",
    "hmac",
    "aes",
    "ecdh",
    "pbkdf2",
    "rsassa-pkcs1-v1.5",
    "rsa",
    "edrsa",
    "browser",
    "node"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/3axap4eHko/subtlecrypto/issues"
  },
  "homepage": "https://github.com/3axap4eHko/subtlecrypto#readme",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.88",
    "glob": "^10.3.7",
    "inop": "^0.4.2",
    "typescript": "^5.2.2"
  }
}
